.inputs-b__labels {
	float: left;
	min-width: 100px;
	width: 150px;
}
.input-b label {
	display: block;
	line-height: 20px;
	margin-bottom: 2px;
	float: left;
	padding-right: 15px;

}
.input-b {
	display: flex;
}
.lt-ie10 .input-b {
	display: table;
}
.inputs-b__inputs {
	float: left;
}
.input-b input[type=text] {
	float: right;
	line-height: 20px;
	height: 20px;
	border: 0;
	margin-bottom: 2px;
	padding: 0 7px;
	width: 100%;



.lt-ie10 {
	/*fallback for flexboxes*/

	.input-b {
		width: 100%;
		& input[type=text] {
			width: auto;
		}
	}
}}
.inputs-b {
	max-width: 300px;
	margin: auto;
	padding: 0 10px;

}
.content-box {
	.btn-default {
		margin-top: 10px;
	}
}